<% for(var i=0; i<posts.length; i++) { %>

<tr>
    <td><%= ((perPage*current)-perPage)+(i+1) %></td>
    <td><%=posts[i].title%></td>
    <td><%=posts[i].author%></td>
    <td><%=moment(posts[i].created).format('YYYY-MM-DD hh:mm:ss')%></td>
    <td></td>
</tr>

<% } %>

<tr>
    <td colspan="5">
        <% if(pages > 0) { %>
        <ul id="pagination-ul">
            <% if(current == 1) { %>
            <li><a>처음</a></li>
            <% } else { %>
            <li><a href="/board/1">처음</a></li>
            <% } %>
            <% var i = (Number(current)) > 5 ? Number(current) - 4 : 1  %>
            <% if(i !== 1)  { %>
            <li><a>...</a></li>
            <% } %>
            <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
            <% if (i == current) { %>
            <li>
                <a><b style="color: red;"><%= i %></b></a>
            </li>
            <% } else { %>
            <li><a href="/board/<%= i %>"><%= i %></a></li>
            <% } %>
            <% if (i == Number(current) + 4 && i < pages) { %>
            <li><a>...</a></li>
            <% } %>
            <% } %>
            <% if (current == pages) { %>
            <li><a>끝</a></li>
            <% } else { %>
            <li><a href="/board/<%= pages %>">끝</a></li>
            <% } %>
        </ul>
        <% } %>
    </td>
</tr>